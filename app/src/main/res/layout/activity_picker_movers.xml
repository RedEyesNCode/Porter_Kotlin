<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PickerMoversActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_12sdp"
        android:elevation="@dimen/_9sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvLegal"
            android:text="Packers \u0026 Movers"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:src="@drawable/ic_close"
            android:id="@+id/ivClose"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/_15sdp"/>

    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_8sdp"
        app:cardBackgroundColor="@color/blue"
        android:background="@drawable/gradient_green"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="@dimen/_165sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sdp"
            android:text="@string/shifting_your_house_now_easier_than_ever"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvnoOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/house_shifting_need_to_be_a_tedious_task_it_can_be_a_memorable_experience"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:lineSpacingExtra="@dimen/_5sdp"

            android:textSize="@dimen/_12sdp" />
    </LinearLayout>






</LinearLayout>
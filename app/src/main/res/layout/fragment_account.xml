<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.AccountFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:text="USER NAME"
                android:textAllCaps="true"
                android:fontFamily="@font/lato_bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvnoOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0987654321"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvViewDetails"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/green"
                android:textSize="@dimen/_11sdp"
                android:text="@string/view_details"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_2sdp"/>


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivReferAndEarn"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_140sdp">
            </ImageView>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"

                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvInviteFriends"
                        android:text="@string/invite_friends"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/if_you_love_the_work_we_are_doing_n_please_spread_the_word"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_rounded_blue_max"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:src="@drawable/ic_share"
                        android:layout_height="@dimen/_15sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invite"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp" />




                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_height="@dimen/_3sdp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/contact_us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/for_any_queries_or_help"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="@dimen/_1sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvMailUs"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/green"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:textSize="@dimen/_11sdp"
                        android:text="Mail us at support@appawheels.com"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_rounded_blue_max"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call us"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />




                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_4sdp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvLegal"
                    android:text="@string/legal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_15sdp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="@dimen/_4sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/app_version_v5_57_0"
                android:textColor="@color/grey_dark"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_2sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvlogout"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/green"
                android:layout_marginTop="@dimen/_9sdp"
                android:textSize="@dimen/_14sdp"
                android:text="LOGOUT"
                android:layout_marginBottom="@dimen/_28sdp"
                android:layout_height="wrap_content"/>










        </LinearLayout>


    </ScrollView>






</LinearLayout>
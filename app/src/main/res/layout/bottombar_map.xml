<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_green_transperent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:weightSum="2"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/btnPackerMovers"
            android:text="@string/packer_u0026_movers"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/background_green_inside_stroke"

            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/btnAllIndiaParcel"
            android:text="@string/all_india_parcel"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_8sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/white"
            android:background="@drawable/background_green_inside_stroke"

            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
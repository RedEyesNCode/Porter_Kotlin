<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"

    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/add_money"
        android:fontFamily="@font/lato_bold"
        android:layout_marginHorizontal="@dimen/_9sdp"

        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_7sdp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_toStartOf="@id/amountLayout"
                android:id="@+id/edtAmount"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:layout_gravity="center"
                android:hint="@string/enter_amount"
                android:background="@drawable/background_grey_rounded"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionDone"
                android:layout_marginStart="@dimen/_8sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/amountLayout"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="wrap_content"

                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/tv500"
                android:paddingHorizontal="@dimen/_7sdp"
                android:background="@drawable/background_light_blue"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 500"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_7sdp"
                android:id="@+id/tv1000"

                android:background="@drawable/background_light_blue"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 1000"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/tv2000"

                android:paddingHorizontal="@dimen/_7sdp"
                android:background="@drawable/background_light_blue"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2000"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />




            </LinearLayout>










        </LinearLayout>


        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="@dimen/_2sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:id="@+id/btnProceed"
        android:text="Proceed"
        android:textAllCaps="false"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="@dimen/_18sdp"
        android:textColor="@color/white"
        android:background="@drawable/background_rounded_blue_max"
        android:layout_marginBottom="@dimen/_25sdp"

        android:layout_height="wrap_content"/>


    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:id="@+id/mainCardLayout"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_145sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="@dimen/_6sdp"

        app:cardElevation="@dimen/_9sdp"
        android:layout_height="@dimen/_175sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="match_parent">



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/within_city"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/ivArrrow"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_12sdp"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_11sdp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/white" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/ivImageCenter"
                android:layout_below="@id/ivArrrow"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_height="@dimen/_95sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="@string/available_in_12_cities_across_india"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>


</LinearLayout>